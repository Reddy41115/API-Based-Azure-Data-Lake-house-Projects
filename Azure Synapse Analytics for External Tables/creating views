
CREATE View Gold.AdventureWorks_Calendar
as
SELECT
*
FROM
OPENROWSET(
    BULK 'https://storageaccountadlsreddy.dfs.core.windows.net/silver/AdventureWorks_Calendar/',
    FORMAT = 'PARQUET'
) as query1

